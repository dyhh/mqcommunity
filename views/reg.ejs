<%- include header %>
<br><br><br>
<div  class="container">
  <div class="col-sm-12">
    <p class="text-center blog_title" style="text-indent:0em;">性能测试论坛</p>
    <p class="text-center blog_subtitle" style="text-indent:0em;margin-top:10px">和你一起进步</p>
    <h4 class="text-center sub_title">
      <span>
        <a href="/login">登录</a>
        <b>·</b>
        <a class="active" href="/reg">注册</a>
      </span>
    </h4>
  </div>
    <form id="regform" class=" col-sm-offset-4 col-sm-8 form-horizontal" role="form" method="post">
        <fieldset>
          <input type="hidden" id="uid" name="uid">
            <div class="row">  <div class="col-sm-6">
              <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    <input type="email" class="form-control input-lg input_size" id="email" name="email" placeholder="请输入常用邮箱" required>
              </div></div>
              <div id="emailinfo" class="col-sm-6"><span class="notice"></span>
                    <%if(err&&err.email){%>
                      <span class="error"><%=err.email%></span>
                    <%}%>
              </div></div>

              <div class="row"><div class="col-sm-6">
              <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input type="text" class="form-control input-lg input_size" id="username" name="username" placeholder="用户名" required>
              </div></div>
              <div id="usernameinfo" class="col-sm-6"><span class="notice"></span>
                <% if(err&&err.username){%>
                <span class="error"><%=err.username%></span>
                <%}%>
              </div></div>

              <div class="row"><div class="col-sm-6">
              <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" class="form-control input-lg input_size" id="password1" name="password1" placeholder="密码" onpaste=" return false" onselectstart="return false" required>
              </div></div>
              <div id="password1info" class="col-sm-6"><span class="notice"></span></div>

              </div>

              <div class="row"><div class="col-sm-6">
              <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" class="form-control input-lg input_size" id="password2" name="password2" placeholder="确认密码" onpaste=" return false" onselectstart="return false" required>
              </div></div>
              <div id="password2info" class="col-sm-6"><span class="notice"></span></div>

              </div>


              <div class="row"><div class="col-sm-6">

                <div class="checkbox">
                  <label>
                    <input type="checkbox" id="agree1" name="agree1" value="agree" checked="checked" />遵守用户协议和隐私政策
                  </label>
                </div>

            </div><div class="col-sm-6"></div>
            </div>


              <div class="row"><div class="col-sm-6">
                   <button id="btn-sub" type="submit" class="btn btn-info btn-lg btn-block bottom-space">注册</button>
              </div>
            </div>
        </fieldset>
    </form>
</div>
<%- include footer %>
<script src="/javascripts/md5.min.js" type="text/javascript"></script>
<script src="/javascripts/regvalidate.js" type="text/javascript"></script>
