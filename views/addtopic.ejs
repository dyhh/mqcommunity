<%- include header %>
<br><br><br>
<script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="/ueditor/ueditor.all.min.js"></script>
<script type="text/javascript" charset="utf-8" src="/ueditor/lang/zh-cn/zh-cn.js"></script>
<div class="container">

  <div class="col-sm-12">
    <form id="addtopicform" class="form-horizontal" role="form" method="post">
      <div class="form-group">
        <label for="topic_type" class="col-sm-2 control-label">请选择文章类型：</label>
        <div class="col-sm-8">
          <select  class="form-control" id="topic_type" name="topic_type" >
            <option value="健身交流">健身交流</option>
            <option value="营养与健康">营养与健康</option>
            <option value="其他">其他</option>
          </select>
        </div>
        <div id="topictypeinfo" class="col-sm-2"><span class="notice"></span></div>
      </div>


      <div class="form-group">
        <label for="title" class="col-sm-2 control-label">文章标题：</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="title" name="title" placeholder="请输入一个醒目的文章标题" required>
        </div>
        <div id="titleinfo" class="col-sm-2"><span class="notice"></span></div>
      </div>

      <div class="form-group">
        <label for="brief" class="col-sm-2 control-label">文章简介：</label>
        <div class="col-sm-8">
          <textarea class="form-control" rows="5" id="brief" name="brief" placeholder="请输入对该文章的一个简短介绍，该介绍将用在其他展示界面。如主页"></textarea>
        </div>
        <div id="briefinfo" class="col-sm-2"><span class="notice"></span></div>
      </div>

      <div class="form-group">
        <label for="content" class="col-sm-2 control-label">文章内容：</label>
        <div class="col-sm-8">
          <script id="editor" name="content" type="text/plain" style="height:500px;"></script>
        </div>
        <div id="contentinfo" class="col-sm-2"><span class="notice"></span></div>
      </div>
      <div class="form-group" style="margin-top:20px">
      <div class="col-sm-offset-4 col-sm-4">
          <button id="btn-sub" type="submit" class="btn btn-info btn-lg btn-block bottom-space">发表</button>
      </div></div>
    </form>
  </div>
</div>
<%- include footer %>
<script src="/javascripts/addtopicvalidate.js" type="text/javascript"></script>
<script type="text/javascript">
  $(document).ready(function(){
    var ue = UE.getEditor('editor');
  })


</script>
