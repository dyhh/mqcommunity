<%- include header %>
<br><br><br>
<div class="container">
  <div class="col-sm-12">
    <p class="text-center blog_title" style="text-indent:0em;">性能测试论坛</p>
    <p class="text-center blog_subtitle" style="text-indent:0em;margin-top:10px">和你一起进步</p>
    <h4 class="text-center sub_title">
      <span>
        重置密码
      </span>
    </h4>
  </div>
    <form id="lostpassform" class=" col-sm-offset-4 col-sm-8 form-horizontal" role="form" method="post">
        <fieldset>
          <input type="hidden" id="id" name="id">

              <div class="row"><div class="col-sm-6">
              <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="email" class="form-control input-lg input_size" id="email" name="email" placeholder="请输入您的注册邮箱"  required>
              </div></div>
              <div id="emailinfo" class="col-sm-6"><span class="notice"></span></div>
                      <%if(err&&err.email){%>
                        <span class="error"><%=err.email%></span>
                      <%}%>
              </div>

              <div class="row"><div class="col-sm-6">
              <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" class="form-control input-lg input_size" id="password1" name="password1" placeholder="输入新密码" onpaste=" return false" onselectstart="return false" required>
              </div></div>
              <div id="password1info" class="col-sm-6"><span class="notice"></span></div>

              </div>

              <div class="row"><div class="col-sm-6">
              <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                    <input type="password" class="form-control input-lg input_size" id="password2" name="password2" placeholder="再次输入新密码" onpaste=" return false" onselectstart="return false" required>
              </div></div>
              <div id="password2info" class="col-sm-6"><span class="notice"></span></div>

              </div>


              <div class="row"><div class="col-sm-6">
                   <button  type="submit" class="btn btn-info btn-lg btn-block bottom-space">验证邮箱</button>
              </div>
            </div>
        </fieldset>
    </form>
</div>
<%- include footer %>
<script src="/javascripts/md5.min.js" type="text/javascript"></script>
<script src="/javascripts/lostpassvalidate.js" type="text/javascript"></script>
